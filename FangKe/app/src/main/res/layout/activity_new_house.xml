<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fangke.com.activity.NewHouseActivity"
    >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:background="#EEEEEE">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/newhouse_leftarrow"/>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
     <ImageView
         android:layout_width="280dp"
         android:layout_height="38dp"
         android:layout_marginLeft="15dp"
         android:background="@drawable/newhome_serch_stre" />

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/newhouse_sousuo"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:text="搜索"
         android:textColor="@color/gray_light"
         android:layout_marginLeft="40dp"
         android:textSize="20dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地图"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/holo_blue_light"/>


   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="10dp"
       android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="1">
     <TextView
         android:id="@+id/newhouse_tv_near"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:text="附近"/>
     <ImageView
         android:id="@+id/newhouse_img_near"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="40dp"
         android:background="@drawable/newhouse_blue_downarrow"
         />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

     <TextView
         android:id="@+id/newhouse_tv_price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:text="价格"/>
     <ImageView
         android:id="@+id/newhouse_img_price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="40dp"
         android:background="@drawable/newhouse_gray_downarrow"
         />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
     <TextView
         android:id="@+id/newhouse_tv_room"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:text="户型"/>
     <ImageView
         android:id="@+id/newhouse_img_room"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="40dp"
         android:background="@drawable/newhouse_gray_downarrow"
         />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
     <TextView
         android:id="@+id/newhouse_tv_more"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:text="更多"/>
     <ImageView
         android:id="@+id/newhouse_img_more"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="40dp"
         android:background="@drawable/newhouse_gray_downarrow"
         />
    </RelativeLayout>

   </LinearLayout>
  </RelativeLayout>

  <ListView
      android:id="@+id/newhouse_lv"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </ListView>
 </LinearLayout>


</RelativeLayout>
