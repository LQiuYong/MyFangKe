<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFFF"
    android:orientation="vertical">

<!--权当学习用吧不用listview而是用自定义的流布局-->
    <!--特色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="特色"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <fangke.com.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_popupview_more_wechat"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:background="@color/more_button_green"
                android:text="微聊"
                android:onClick="click"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_popupview_more_shapanlou"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:background="@color/more_button_green"
                android:text="沙盘楼"
                android:onClick="click"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                android:id="@+id/newhouse_popupview_more_videohouse"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
               android:background="@color/more_button_green"
                android:text="视频看房"
                android:onClick="click"
                android:textColor="@color/mblue" />

        </fangke.com.view.FlowLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/m_moregray" />
    </LinearLayout>
    <!--面积平方米-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面积(平方米)"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"
            />

        <fangke.com.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_60"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="60以下"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_80"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="60-80"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_100"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="80-100"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_120"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="100-120"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_150"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="120-150"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_200"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:layout_marginTop="12dp"
                android:text="150-200"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_250"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:layout_marginTop="12dp"
                android:onClick="click"
                android:layout_marginLeft="12dp"
                android:text="200以上"/>

        </fangke.com.view.FlowLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/m_moregray"/>
    </LinearLayout>
<!--物业-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="物业"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <fangke.com.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_zhuzhai"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
               android:background="@color/more_button_green"
                android:text="住宅"
                android:onClick="click"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_bieshu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
               android:background="@color/more_button_green"
                android:text="别墅"
                android:onClick="click"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_shangzhu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
               android:background="@color/more_button_green"
                android:text="商住"
                android:onClick="click"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_shangpu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
               android:background="@color/more_button_green"
                android:text="商铺"
                android:onClick="click"
                android:textColor="@color/mblue" />

            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_xiezilou"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="写字楼"
                android:textColor="@color/mblue" />

        </fangke.com.view.FlowLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/m_moregray" />
    </LinearLayout>
    <!--热门标签-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门标签"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="10dp"
            />

        <fangke.com.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_gangxu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="刚需房"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_youhui"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="优惠打折"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_buxiangou"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="不限购"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_jijiangkaipan"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="即将开盘"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_feimaopi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="非毛坯"/>
            <fangke.com.view.NoRepeatButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/newhouse_popupview_more_gaishanfang"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/mblue"
               android:background="@color/more_button_green"
                android:onClick="click"
                android:text="改善房"/>

        </fangke.com.view.FlowLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/m_moregray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >
        <fangke.com.view.NoRepeatButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/newhouse_popupview_more_resize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_gray_guide"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black_light"
            android:onClick="click"
            android:text="重置"/>

        <fangke.com.view.NoRepeatButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/newhouse_popupview_more_check"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_guide"
            android:textColor="@color/white"
            android:onClick="click"
            android:text="确定"/>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>
